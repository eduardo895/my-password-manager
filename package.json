{
  "name": "my-password-manager",
  "version": "1.0.0",
  "description": "My password manager",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "electron": "electron main.js",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "edu",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.edu.passwordmanager",
    "productName": "MyPasswordManager",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/*/{README.md,README,readme.md,readme}",
      "!**/.*",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
